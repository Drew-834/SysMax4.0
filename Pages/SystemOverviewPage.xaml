<Page x:Class="SysMax2._1.Pages.SystemOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SysMax2._1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="System Overview">

    <Page.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1f6aa5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#3498db"/>
            <Setter Property="BorderBrush" Value="#3498db"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1e3d5c"/>
                                <Setter Property="BorderBrush" Value="#3498db"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FixButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980b9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <!-- Page Header -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <TextBlock Text="System Overview" FontSize="24" Foreground="White" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="RefreshButton" Content="Refresh" Style="{StaticResource ActionButtonStyle}" Click="RefreshButton_Click"/>
                    <Button x:Name="RunScanButton" Content="Run System Scan" Style="{StaticResource ActionButtonStyle}" Margin="10,5,0,5" Click="RunScanButton_Click"/>
                </StackPanel>
            </Grid>

            <!-- System Health Summary -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="System Health" Style="{StaticResource CardHeaderStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CPU Health -->
                        <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}" Margin="0,0,5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="CPU" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                                    <Ellipse x:Name="CpuHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock x:Name="CpuUsageValue" Grid.Row="1" Text="24%" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,5,0,5"/>

                                <TextBlock x:Name="CpuTemperature" Grid.Row="2" Text="45°C" Foreground="#AAAAAA" FontSize="12"/>
                            </Grid>
                        </Border>

                        <!-- Memory Health -->
                        <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}" Margin="5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="Memory" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                                    <Ellipse x:Name="MemoryHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock x:Name="MemoryUsageValue" Grid.Row="1" Text="36%" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,5,0,5"/>

                                <TextBlock x:Name="MemoryAvailable" Grid.Row="2" Text="10.2 GB Free" Foreground="#AAAAAA" FontSize="12"/>
                            </Grid>
                        </Border>

                        <!-- Disk Health -->
                        <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}" Margin="5,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="Storage" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                                    <Ellipse x:Name="DiskHealthIndicator" Width="10" Height="10" Fill="#f39c12" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock x:Name="DiskUsageValue" Grid.Row="1" Text="78%" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,5,0,5"/>

                                <TextBlock x:Name="DiskAvailable" Grid.Row="2" Text="123 GB Free" Foreground="#AAAAAA" FontSize="12"/>
                            </Grid>
                        </Border>

                        <!-- Network Health -->
                        <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}" Margin="5,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="Network" FontWeight="SemiBold" Foreground="#BBBBBB"/>
                                    <Ellipse x:Name="NetworkHealthIndicator" Width="10" Height="10" Fill="#2ecc71" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>

                                <TextBlock x:Name="NetworkSpeedValue" Grid.Row="1" Text="12 MB/s" FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,5,0,5"/>

                                <TextBlock x:Name="NetworkStatus" Grid.Row="2" Text="Connected" Foreground="#AAAAAA" FontSize="12"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <!-- System Information and Quick Actions Row -->
            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- System Specifications -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="System Specifications" Style="{StaticResource CardHeaderStyle}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- OS -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Operating System:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="OsInfo" Grid.Row="0" Grid.Column="1" Text="Windows 11 Pro 22H2 (64-bit)" Foreground="White" Margin="15,0,0,10"/>

                            <!-- CPU -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Processor:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="CpuInfo" Grid.Row="1" Grid.Column="1" Text="Intel Core i7-12700K @ 3.60GHz" Foreground="White" Margin="15,0,0,10"/>

                            <!-- RAM -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Memory:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="RamInfo" Grid.Row="2" Grid.Column="1" Text="32 GB DDR5 @ 4800MHz" Foreground="White" Margin="15,0,0,10"/>

                            <!-- GPU -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Graphics:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="GpuInfo" Grid.Row="3" Grid.Column="1" Text="NVIDIA GeForce RTX 3080" Foreground="White" Margin="15,0,0,10"/>

                            <!-- Storage -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Storage:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="StorageInfo" Grid.Row="4" Grid.Column="1" Text="1TB NVMe SSD, 2TB HDD" Foreground="White" Margin="15,0,0,10"/>

                            <!-- Network -->
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Network:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,10"/>
                            <TextBlock x:Name="NetworkInfo" Grid.Row="5" Grid.Column="1" Text="Intel Wireless-AC 9560 + Bluetooth 5.0" Foreground="White" Margin="15,0,0,10"/>

                            <!-- Computer Name -->
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Computer Name:" FontWeight="SemiBold" Foreground="#BBBBBB" Margin="0,0,0,0"/>
                            <TextBlock x:Name="ComputerNameInfo" Grid.Row="6" Grid.Column="1" Text="DESKTOP-LK728FG" Foreground="White" Margin="15,0,0,0"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Quick Actions -->
                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Quick Actions" Style="{StaticResource CardHeaderStyle}"/>

                        <StackPanel Grid.Row="1">
                            <Button x:Name="CheckUpdatesButton" Content="Check for Windows Updates" Style="{StaticResource OutlineButtonStyle}" Click="QuickAction_Click"/>
                            <Button x:Name="CleanupButton" Content="Disk Cleanup" Style="{StaticResource OutlineButtonStyle}" Click="QuickAction_Click"/>
                            <Button x:Name="NetworkDiagnosticsButton" Content="Network Diagnostics" Style="{StaticResource OutlineButtonStyle}" Click="QuickAction_Click"/>
                            <Button x:Name="StartupAppsButton" Content="Manage Startup Apps" Style="{StaticResource OutlineButtonStyle}" Click="QuickAction_Click"/>
                            <Button x:Name="SecurityScanButton" Content="Quick Security Scan" Style="{StaticResource OutlineButtonStyle}" Click="QuickAction_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Issues and Notifications -->
            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="Issues &amp; Notifications" Style="{StaticResource CardHeaderStyle}" Margin="0"/>
                        <TextBlock x:Name="IssueCount" Text="2 issues found" Foreground="#f39c12" HorizontalAlignment="Right"/>
                    </Grid>

                    <StackPanel Grid.Row="1" x:Name="IssuesList">
                        <!-- Issue Item 1 -->
                        <Border Background="#2a2a2a" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#f39c12" Margin="0,0,12,0" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Disk space is running low" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="C: drive has less than 15% free space. This may affect system performance." 
                                              Foreground="#AAAAAA" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="Fix Now" Style="{StaticResource FixButtonStyle}" Tag="DiskSpace" Click="FixIssue_Click"/>
                            </Grid>
                        </Border>

                        <!-- Issue Item 2 -->
                        <Border Background="#2a2a2a" CornerRadius="4" Padding="12" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Grid.Column="0" Width="12" Height="12" Fill="#e74c3c" Margin="0,0,12,0" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Windows Update needs attention" Foreground="White" FontWeight="SemiBold"/>
                                    <TextBlock Text="Important security updates are pending. Restart required to complete installation." 
                                              Foreground="#AAAAAA" FontSize="12" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="2" Content="Update Now" Style="{StaticResource FixButtonStyle}" Tag="WindowsUpdate" Click="FixIssue_Click"/>
                            </Grid>
                        </Border>

                        <!-- No Issues Message (hidden by default) -->
                        <TextBlock x:Name="NoIssuesMessage" Text="No issues detected. Your system is running optimally." 
                                  Foreground="#2ecc71" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,20" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>